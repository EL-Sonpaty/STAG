<UserControl x:Class="STAG.Views.STAGView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:fas="clr-namespace:FontAwesome.Sharp;assembly=FontAwesome.Sharp"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:STAG.Views"
             xmlns:vm="clr-namespace:STAG.ViewModels"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             Height="Auto" Width="Auto">

    <UserControl.Resources>
        <!-- Declare the converter as a resource -->
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>



        <Expander Grid.Row="0" Header="Add/Remove/Reorder Stages">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Margin="5">
                    <Border CornerRadius="6"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            Background="White"
                            Margin="0,0,10,0"
                            Width="200"
                            Height="30"
                            VerticalAlignment="Center">
                        <TextBox Text="{Binding NewStageName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                FontSize="12"
                                Background="Transparent"
                                BorderThickness="0"
                                Height="Auto"
                                VerticalContentAlignment="Center"
                                FocusVisualStyle="{x:Null}">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="KeyDown">
                                        <i:InvokeCommandAction Command="{Binding StageInputKeyDownCommand}" PassEventArgsToCommand="True" />
                                </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </TextBox>              
                    </Border>

                    <Button  Command="{Binding AddNewStageCommand}">
                        <fas:IconBlock Icon="Plus" Foreground="Black" Width="16" Height="16"/>
                    </Button>
                </StackPanel>

                <ListBox Grid.Row="1" x:Name="EditListBox" ItemsSource="{Binding StageConstraints}" d:ItemsSource="{d:SampleData ItemCount =5}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical" Margin="0 5 0 0">
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBox Text="{Binding StageName,Mode=TwoWay}" Margin="0,0,10,0"/>
                                    <Button Command="{Binding DataContext.MoveStageUpCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                    CommandParameter="{Binding}">
                                        <fas:IconBlock Icon="ArrowAltCircleUp" Foreground="Black" Width="16" Height="16"/>
                                    </Button>
                                    <Button Command="{Binding DataContext.MoveStageDownCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                    CommandParameter="{Binding}">
                                        <fas:IconBlock Icon="ArrowAltCircleDown" Foreground="Black" Width="16" Height="16"/>
                                    </Button>
                                    <Button Command="{Binding DataContext.RemoveStageCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                    CommandParameter="{Binding}">
                                        <fas:IconBlock Icon="Minus" Foreground="Black" Width="16" Height="16"/>
                                    </Button>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <ToggleButton IsChecked="{Binding IsGeometricalEditable}">
                                        <fas:IconBlock Icon="Cubes" Foreground="Black" Width="16" Height="16"/>
                                    </ToggleButton>
                                    <ToggleButton IsChecked="{Binding IsTranslationEditable}">
                                        <fas:IconBlock Icon="ArrowsAlt" Foreground="Black" Width="16" Height="16"/>
                                    </ToggleButton>
                                    <ToggleButton IsChecked="{Binding IsAttributesEditable}">
                                        <fas:IconBlock Icon="Tags" Foreground="Black" Width="16" Height="16"/>
                                    </ToggleButton>
                                    <ToggleButton IsChecked="{Binding IsUserTextsEditable}">
                                        <fas:IconBlock Icon="Font" Foreground="Black" Width="16" Height="16"/>
                                    </ToggleButton>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Expander>

        <ListBox Grid.Row="2" x:Name="ReportListBox" ItemsSource="{Binding StageConstraints}" d:ItemsSource="{d:SampleData ItemCount =5}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Index}" Margin="5 0"/>
                        <TextBlock Text="{Binding StageName}" Margin="5 0"/>
                        <fas:IconBlock Icon="Cubes" Foreground="Black" Width="16" Height="16" Margin="5 0" 
                                       Visibility="{Binding IsGeometricalEditable,
                                        Converter={StaticResource BoolToVisConverter}}"/>
                        <fas:IconBlock Icon="ArrowsAlt" Foreground="Black" Width="16" Height="16" Margin="5 0"
                                       Visibility="{Binding IsTranslationEditable,
                                        Converter={StaticResource BoolToVisConverter}}"/>
                        <fas:IconBlock Icon="Tags" Foreground="Black" Width="16" Height="16" Margin="5 0"
                                       Visibility="{Binding IsAttributesEditable,
                                        Converter={StaticResource BoolToVisConverter}}"/>
                        <fas:IconBlock Icon="Font" Foreground="Black" Width="16" Height="16" Margin="5 0"
                                       Visibility="{Binding IsUserTextsEditable,
                                        Converter={StaticResource BoolToVisConverter}}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>